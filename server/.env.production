# Server Configuration
PORT=5000
NODE_ENV=production

# Client Configuration
CLIENT_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sut_court_queue
# For SQLite in production (not recommended for high load)
# DATABASE_URL=./production.sqlite

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Court Configuration
COURT_TIMEZONE=Asia/Bangkok
MAX_QUEUE_SIZE=20
MATCH_TARGET_SCORE=21
CHAMPION_RETURN_COOLDOWN_MINUTES=5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
TRUST_PROXY=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true